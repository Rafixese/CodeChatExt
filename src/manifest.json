{
  "manifest_version": 3,
  "name": "CodeChat",
  "version": "0.1",
  "description": "CodeChat - A bridge between coding and chatting",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/index.html"
  },
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://chat.openai.com/*"
  ]
}