{
  "manifest_version": 3,
  "name": "CodeChat",
  "version": "0.1",
  "description": "CodeChat - A bridge between coding and chatting",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "popup": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "permissions": ["activeTab"]
}